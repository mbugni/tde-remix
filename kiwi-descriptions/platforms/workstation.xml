<image>
	<profiles>
		<profile name="Workstation" description="Workstation environment">
			<requires profile="Desktop"/>
		</profile>
		<profile name="Workstation-l10n" description="Workstation localization">
			<requires profile="Workstation"/>
			<requires profile="Desktop-l10n"/>
		</profile>
	</profiles>
	<packages type="image" profiles="Workstation">
		<!-- Bluetooth -->
		<package name="bluez-firmware"/>
		<package name="bluez-obexd"/>
		<package name="bluez-tools"/>
		<package name="tdebluez-trinity"/>
		<!-- Connectivity -->
		<package name="ipp-usb"/>
		<package name="tdebase-tdeio-plugins-trinity"/>
		<!-- Hardware support -->
		<package name="libsane-hpaio"/>
		<!-- Networking -->
		<package name="network-manager-l2tp"/>
		<package name="network-manager-openvpn"/>
		<package name="network-manager-pptp"/>
		<!-- Printing -->
		<package name="cups"/>
		<package name="cups-ipp-utils"/>
		<package name="hplip"/>
		<package name="tdeprint-trinity"/>
		<!-- Scanning -->
		<package name="sane-airscan"/>
		<package name="sane-utils"/>
	</packages>
</image>